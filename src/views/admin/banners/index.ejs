
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-images mr-2"></i>Banners Management
                </h3>
                <div class="card-tools">
                    <a href="/admin/banners/create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus mr-1"></i> Add Banner
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (banners && banners.length > 0) { %>
                                <% banners.forEach(banner => { %>
                                    <tr>
                                        <td><%= banner.id %></td>
                                        <td>
                                            <% if (banner.image) { %>
                                                <img src="<%= banner.image %>" alt="<%= banner.title %>" class="banner-image">
                                            <% } else { %>
                                                <div class="banner-image bg-light d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-image text-muted"></i>
                                                </div>
                                            <% } %>
                                        </td>
                                        <td>
                                            <strong><%= banner.title %></strong>
                                        </td>
                                        <td>
                                            <span class="badge badge-<%= banner.status === 'active' ? 'success' : 'secondary' %> status-badge">
                                                <%= banner.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= new Date(banner.createdAt).toLocaleDateString() %>
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/admin/banners/<%= banner.id %>" class="btn btn-info btn-sm" title="View">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/admin/banners/<%= banner.id %>/edit" class="btn btn-warning btn-sm" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form action="/admin/banners/<%= banner.id %>" method="POST" class="d-inline">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button type="submit" class="btn btn-danger btn-sm delete-btn" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center text-muted">No banners found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
