
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-user mr-2"></i>Customer Details: <%= customer.name %>
                </h3>
                <div class="card-tools">
                    <a href="/admin/customers/<%= customer.id %>/edit" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit mr-1"></i> Edit
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="product-image mx-auto bg-primary d-flex align-items-center justify-content-center text-white rounded-circle" style="width: 120px; height: 120px; font-size: 3rem;">
                                <%= customer.name.charAt(0).toUpperCase() %>
                            </div>
                            <h4 class="mt-3"><%= customer.name %></h4>
                            <span class="badge badge-<%= customer.status === 'active' ? 'success' : 'secondary' %>">
                                <%= customer.status %>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8"><strong><%= customer.name %></strong></dd>
                            
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">
                                <a href="mailto:<%= customer.email %>"><%= customer.email %></a>
                            </dd>
                            
                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">
                                <% if (customer.phone) { %>
                                    <a href="tel:<%= customer.phone %>"><%= customer.phone %></a>
                                <% } else { %>
                                    <span class="text-muted">Not provided</span>
                                <% } %>
                            </dd>
                            
                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge badge-<%= customer.status === 'active' ? 'success' : 'secondary' %>">
                                    <%= customer.status %>
                                </span>
                            </dd>
                            
                            <dt class="col-sm-4">Member Since:</dt>
                            <dd class="col-sm-8"><%= new Date(customer.createdAt).toLocaleDateString() %></dd>
                            
                            <dt class="col-sm-4">Last Updated:</dt>
                            <dd class="col-sm-8"><%= new Date(customer.updatedAt).toLocaleDateString() %></dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/admin/customers" class="btn btn-secondary">
                    <i class="fas fa-arrow-left mr-1"></i> Back to Customers
                </a>
                <a href="/admin/customers/<%= customer.id %>/edit" class="btn btn-warning ml-2">
                    <i class="fas fa-edit mr-1"></i> Edit Customer
                </a>
                <form action="/admin/customers/<%= customer.id %>" method="POST" class="d-inline ml-2">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger delete-btn">
                        <i class="fas fa-user-times mr-1"></i> Deactivate Customer
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-bar mr-2"></i>Customer Stats
                </h3>
            </div>
            <div class="card-body">
                <div class="info-box">
                    <span class="info-box-icon bg-info">
                        <i class="fas fa-calendar"></i>
                    </span>
                    <div class="info-box-content">
                        <span class="info-box-text">Member Since</span>
                        <span class="info-box-number">
                            <%= new Date(customer.createdAt).toLocaleDateString() %>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-tools mr-2"></i>Quick Actions
                </h3>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/admin/customers/<%= customer.id %>/edit" class="btn btn-warning">
                        <i class="fas fa-edit mr-1"></i> Edit Customer
                    </a>
                    <a href="mailto:<%= customer.email %>" class="btn btn-primary">
                        <i class="fas fa-envelope mr-1"></i> Send Email
                    </a>
                    <% if (customer.phone) { %>
                        <a href="tel:<%= customer.phone %>" class="btn btn-success">
                            <i class="fas fa-phone mr-1"></i> Call Customer
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
