
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-users mr-2"></i>Customers Management
                </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Joined</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (customers && customers.length > 0) { %>
                                <% customers.forEach(customer => { %>
                                    <tr>
                                        <td><%= customer.id %></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="product-image mr-2 bg-primary d-flex align-items-center justify-content-center text-white rounded-circle">
                                                    <%= customer.name.charAt(0).toUpperCase() %>
                                                </div>
                                                <strong><%= customer.name %></strong>
                                            </div>
                                        </td>
                                        <td><%= customer.email %></td>
                                        <td><%= customer.phone || 'N/A' %></td>
                                        <td>
                                            <span class="badge badge-<%= customer.status === 'active' ? 'success' : 'secondary' %> status-badge">
                                                <%= customer.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= new Date(customer.createdAt).toLocaleDateString() %>
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/admin/customers/<%= customer.id %>" class="btn btn-info btn-sm" title="View">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/admin/customers/<%= customer.id %>/edit" class="btn btn-warning btn-sm" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form action="/admin/customers/<%= customer.id %>" method="POST" class="d-inline">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button type="submit" class="btn btn-danger btn-sm delete-btn" title="Deactivate">
                                                        <i class="fas fa-user-times"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center text-muted">No customers found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <nav aria-label="Customers pagination">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                                </li>
                            <% } %>
                            
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                            
                            <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info">
                            Showing <%= customers ? customers.length : 0 %> of <%= totalCustomers %> customers
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
