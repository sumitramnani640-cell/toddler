<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title || "Savers Grocery" %></title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        /* Amazon-like colors */
        header {
            background-color: #131921;
        }
        .nav-bottom {
            background-color: #232f3e;
        }
        .search-btn {
            background-color: #febd69;
        }
        .banner-carousel {
            height: 400px;
            object-fit: cover;
            border-radius: 10px;
        }
        .category-card img, .product-card img {
            height: 180px;
            object-fit: cover;
        }
        footer {
            background-color: #232f3e;
            color: #fff;
            padding: 40px 0;
        }
        footer a {
            color: #ddd;
            text-decoration: none;
        }
        footer a:hover {
            color: #fff;
        }
    </style>
</head>
<body>

    <!-- ✅ AMAZON STYLE HEADER -->
    <header class="text-white py-2">
        <div class="container-fluid px-4 d-flex align-items-center justify-content-between">

            <!-- Logo -->
            <a href="/" class="text-white fw-bold fs-4 text-decoration-none">
                <i class="fas fa-shopping-cart"></i> Savers Grocery
            </a>

            <!-- Search -->
            <form class="d-flex flex-grow-1 mx-4" action="/search" method="GET">
                <select name="category" class="form-select w-auto me-2">
                    <option value="">All</option>
                    <% categories && categories.forEach(cat => { %>
                        <option value="<%= cat.slug || cat.id %>"><%= cat.name %></option>
                    <% }) %>
                </select>
                <input type="text" name="q" class="form-control" placeholder="Search products...">
                <button class="btn search-btn ms-2"><i class="fas fa-search"></i></button>
            </form>

            <!-- Cart -->
            <a href="/cart" class="text-white text-decoration-none position-relative">
                <i class="fas fa-shopping-cart fa-lg"></i>
                <span class="badge rounded-pill bg-warning text-dark position-absolute top-0 start-100 translate-middle">
                    0
                </span>
            </a>

        </div>
    </header>

    <!-- ✅ AMAZON STYLE SUB NAV -->
    <div class="nav-bottom text-white small py-1">
        <div class="container-fluid px-4 d-flex gap-4">

            <a href="#categories" class="text-white">Categories</a>
            <a href="#products" class="text-white">Products</a>
            <a href="#contact" class="text-white">Contact</a>
        </div>
    </div>

    <!-- ✅ BANNERS -->
    <% if (banners && banners.length > 0) { %>
    <section class="py-4">
        <div class="container">
            <div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <% banners.forEach((banner, index) => { %>
                        <div class="carousel-item <%= index===0 ? 'active' : '' %>">
                            <img src="<%= banner.image %>" class="d-block w-100 banner-carousel" alt=""
                             style="height: 300px; object-fit: cover; border-radius: 0;">
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </section>
    <% } %>

    <!-- ✅ CATEGORIES -->
    <% if (categories && categories.length > 0) { %>
    <section id="categories" class="py-5 bg-light">
        <div class="container">

            <h3 class="mb-4 fw-bold text-center">Shop by Category</h3>
            <div class="row">
                <% categories.slice(0,8).forEach(cat => { %>
                <div class="col-md-3 mb-4">
                    <div class="card category-card shadow-sm">
                        <img src="/uploads/categories/<%= cat.image || 'placeholder.jpg' %>" class="card-img-top" alt="">
                        <div class="card-body text-center">
                            <h6 class="fw-bold"><%= cat.name %></h6>
                            <a href="/category/<%= cat.slug || cat.id %>" class="btn btn-sm btn-warning mt-2">View More</a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- ✅ FEATURED PRODUCTS -->
    <% if (featuredProducts && featuredProducts.length > 0) { %>
    <section id="products" class="py-5">
        <div class="container">
            <h3 class="mb-4 fw-bold text-center">Featured Products</h3>
            <div class="row">
                <% featuredProducts.forEach(prod => { %>
                <div class="col-md-3 mb-4">
                    <div class="card product-card shadow-sm">
                        <img src="<%= prod.image %>" class="card-img-top" alt="">
                        <div class="card-body">
                            <h6 class="fw-bold text-truncate"><%= prod.name %></h6>
                            <p class="text-muted small"><%= prod.description?.substring(0,50) %>...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-success fw-bold">$<%= prod.price %></span>
                                <span class="badge bg-<%= prod.stock>0 ? 'success' : 'danger' %>">
                                    <%= prod.stock>0 ? 'In Stock' : 'Out Of Stock' %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>
    <% } %>

    
    <!-- ✅ AMAZON STYLE FOOTER -->
    <footer class="mt-5">
        <div class="container">
            <div class="row text-start">

                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold">Get to Know Us</h6>
                    <a href="#">About</a><br>
                    <a href="#">Careers</a><br>
                    <a href="#">Press Releases</a>
                </div>

                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold">Connect With Us</h6>
                    <a href="#">Facebook</a><br>
                    <a href="#">Instagram</a>
                </div>

                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold">Make Money With Us</h6>
                    <a href="#">Sell on Savers</a><br>
                    <a href="#">Affiliate</a>
                    
                </div>

                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold">Let Us Help You</h6>
                    <a href="#">Your Account</a><br>
                    <a href="#">Returns Centre</a><br>
                    <a href="#">Help</a>
    
                </div>

            </div>
            <div class="text-center small mt-4">
                © 2024 Savers Grocery — All Rights Reserved
            </div>
        </div>
    </footer>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
